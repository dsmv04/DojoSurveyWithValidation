@model DojoSurvey.Models.Survey

<div class="container">
    <div class="result">
        <h1>Submitted Info:</h1>
        <p><strong>Name: </strong>@Model.Name</p>
        <p><strong>Location: </strong>@Model.Location</p>
        <p><strong>Language: </strong>@Model.Language</p>
        @if (!string.IsNullOrWhiteSpace(Model.Comment))
        {
            <p><strong>Comment: </strong>@Model.Comment</p>
        }
        <a asp-controller="Home" asp-action="Index"><button class="btn btn-primary">Go Back</button></a>
    </div>
</div>
